@* Shared form fields used by both AddMovie and EditMovie views.
   The parent view is responsible for the <form> tag, hidden key field,
   submit button text, and the Scripts section. *@

@model Collection

<!-- Category -->
<div class="mb-3">
    <label asp-for="CategoryID" class="form-label fw-semibold">
        Category <span class="text-danger">*</span>
    </label>
    <select asp-for="CategoryID"
            asp-items="ViewBag.Categories"
            class="form-select">
        <option value="">-- Select a Category --</option>
    </select>
    <span asp-validation-for="CategoryID" class="text-danger small"></span>
</div>

<!-- Title (required) -->
<div class="mb-3">
    <label asp-for="Title" class="form-label fw-semibold">
        Title <span class="text-danger">*</span>
    </label>
    <input asp-for="Title" class="form-control" placeholder="Movie title" />
    <span asp-validation-for="Title" class="text-danger small"></span>
</div>

<!-- Year (required â€” must be 1888 or later) -->
<div class="mb-3">
    <label asp-for="Year" class="form-label fw-semibold">
        Year <span class="text-danger">*</span>
    </label>
    <input asp-for="Year" class="form-control" type="number" min="1888" placeholder="e.g. 2001" />
    <span asp-validation-for="Year" class="text-danger small"></span>
</div>

<!-- Director -->
<div class="mb-3">
    <label asp-for="Director" class="form-label fw-semibold">Director</label>
    <input asp-for="Director" class="form-control" placeholder="Director's name" />
    <span asp-validation-for="Director" class="text-danger small"></span>
</div>

<!-- Rating -->
<div class="mb-3">
    <label asp-for="Rating" class="form-label fw-semibold">Rating</label>
    <select asp-for="Rating" class="form-select">
        <option value="">-- Select a Rating --</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <span asp-validation-for="Rating" class="text-danger small"></span>
</div>

<!-- Edited (required) -->
<div class="mb-3">
    <label asp-for="Edited" class="form-label fw-semibold">
        Edited? <span class="text-danger">*</span>
    </label>
    <select asp-for="Edited" class="form-select">
        <option value="">-- Select --</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <span asp-validation-for="Edited" class="text-danger small"></span>
</div>

<!-- CopiedToPlex (required) -->
<div class="mb-3">
    <label asp-for="CopiedToPlex" class="form-label fw-semibold">
        Copied to Plex? <span class="text-danger">*</span>
    </label>
    <select asp-for="CopiedToPlex" class="form-select">
        <option value="">-- Select --</option>
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <span asp-validation-for="CopiedToPlex" class="text-danger small"></span>
</div>

<!-- Lent To -->
<div class="mb-3">
    <label asp-for="LentTo" class="form-label fw-semibold">Lent To</label>
    <input asp-for="LentTo" class="form-control" placeholder="Person's name (if lent out)" />
    <span asp-validation-for="LentTo" class="text-danger small"></span>
</div>

<!-- Notes (max 25 characters) -->
<div class="mb-3">
    <label asp-for="Notes" class="form-label fw-semibold">Notes</label>
    <input asp-for="Notes" class="form-control" maxlength="25" placeholder="Short note (25 chars max)" />
    <span asp-validation-for="Notes" class="text-danger small"></span>
</div>

<!-- Required field legend -->
<p class="text-muted small mb-3">
    <span class="text-danger">*</span> Required fields
</p>
