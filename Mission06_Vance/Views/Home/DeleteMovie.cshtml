@model Collection

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="row justify-content-center">
    <div class="col-md-6">

        <h1 class="mb-4 text-danger">Delete Movie</h1>

        <!-- Warning alert to confirm the user's intent -->
        <div class="alert alert-warning" role="alert">
            <strong>Are you sure you want to delete this movie?</strong>
            This action cannot be undone.
        </div>

        <!-- Display the movie details so the user can confirm the right item -->
        <div class="card mb-4">
            <div class="card-header bg-dark text-white">
                <strong>@Model.Title</strong>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <span class="fw-semibold">Category:</span> @Model.Category?.CategoryName
                </li>
                <li class="list-group-item">
                    <span class="fw-semibold">Year:</span> @Model.Year
                </li>
                <li class="list-group-item">
                    <span class="fw-semibold">Director:</span> @Model.Director
                </li>
                <li class="list-group-item">
                    <span class="fw-semibold">Rating:</span> @Model.Rating
                </li>
            </ul>
        </div>

        <!-- POST form submits the movie's ID for deletion -->
        <form asp-action="DeleteMovie" method="post">
            <input type="hidden" name="CollectionID" value="@Model.CollectionID" />

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Yes, Delete It</button>
                <a asp-action="MovieCollection" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

    </div>
</div>
