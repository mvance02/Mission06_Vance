@model Collection

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="row justify-content-center">
    <div class="col-md-7">

        <h1 class="mb-4">Edit Movie</h1>

        <form asp-action="EditMovie" method="post">

            @* Hidden field preserves the primary key so EF knows which record to update *@
            <input type="hidden" asp-for="CollectionID" />

            @* Shared form fields (category, title, year, director, etc.) *@
            @await Html.PartialAsync("_MovieForm", Model)

            <!-- Action buttons -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="MovieCollection" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
