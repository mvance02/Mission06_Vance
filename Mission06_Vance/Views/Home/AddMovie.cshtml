@model Collection

@{
    ViewData["Title"] = "Add Movie";
}

<div class="row justify-content-center">
    <div class="col-md-7">

        <h1 class="mb-4">Add a Movie</h1>

        <form asp-action="AddMovie" method="post">

            @* Shared form fields (category, title, year, director, etc.) *@
            @await Html.PartialAsync("_MovieForm", Model)

            <!-- Action buttons -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">Save Movie</button>
                <a asp-action="MovieCollection" class="btn btn-secondary">Cancel</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
